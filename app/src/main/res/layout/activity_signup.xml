<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup_screen"
    tools:context=".SignupActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="308dp"
        android:layout_height="104dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.991"
        app:srcCompat="@drawable/login_orange_button" />

    <EditText
        android:id="@+id/signup_username"
        android:layout_width="275dp"
        android:layout_height="44dp"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="taper username....."
        android:background="@android:color/transparent"
        android:inputType="textPersonName"
        android:paddingLeft="20sp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.602"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.334" />

    <EditText
        android:id="@+id/signup_pass"
        android:layout_width="275dp"
        android:layout_height="44dp"
        android:layout_marginBottom="384dp"
        android:ems="10"
        android:hint="taper votre mot de passe"
        android:background="@android:color/transparent"
        android:inputType="textPassword"
        android:paddingLeft="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.602"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_username"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/signup_pass_confim"
        android:layout_width="275dp"
        android:layout_height="44dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="confirmer votre mot de passe"
        android:background="@android:color/transparent"
        android:inputType="textPassword"
        android:paddingLeft="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.602"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_pass"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/matricule"
        android:layout_width="275dp"
        android:layout_height="44dp"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="ici matricule exp:(01-A-21456)"
        android:background="@android:color/transparent"
        android:inputType="textPersonName"
        android:paddingLeft="20sp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.602"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_pass_confim"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/signup_email"
        android:layout_width="275dp"
        android:layout_height="44dp"
        android:layout_marginBottom="164dp"
        android:ems="10"
        android:hint="taper votre email"
        android:background="@android:color/transparent"
        android:inputType="textEmailAddress"
        android:paddingLeft="20sp"
        android:imeOptions="actionDone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.602"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/matricule"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>